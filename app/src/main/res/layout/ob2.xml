<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:background="#FFC4C6"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-58dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:fontFamily="@font/berkshire_swash"
            android:shadowColor="#FFFFFF"
            android:text="Stylo"
            android:textAlignment="center"
            android:textColor="#E43874"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="67dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#00E44747"
            android:text="Get Creative"
            android:textColor="#121212"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="119dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="79dp"
            android:layout_height="40dp"
            android:backgroundTint="#DDEF3C"
            android:text="Skip"
            android:textColor="#0B0B0B"
            tools:layout_editor_absoluteX="335dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="437dp"
            android:layout_height="91dp"
            android:letterSpacing="0.05"
            android:text="Shuffle your items clueless-style to create outfits. Keep clothes in play "
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="158dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="811dp"
            android:layout_height="689dp"
            app:srcCompat="@drawable/ob"
            tools:layout_editor_absoluteX="-241dp"
            tools:layout_editor_absoluteY="209dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="185dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:backgroundTint="#BFD725"
            android:text="Sign up"
            android:textColor="#141313"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="710dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="178dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:backgroundTint="#FBFBFB"
            android:text="Sign in"
            android:textColor="#141414"
            android:textColorLink="#FBF9F9"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="710dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:backgroundTint="#DDEF3C"
        android:text="Skip"
        android:textColor="#0B0B0B"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>